    <Style x:Key="BoxButton" TargetType="{x:Type Button}">

        <Setter Property="Background" Value="{Binding BtnBack}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{Binding BtnBor}"/>
        <!--<Setter Property="Margin" Value="5,0,0,0"/>-->
        <Setter Property="Width" Value="{Binding BtnW}"/>
        <Setter Property="Height" Value="{Binding BtnH}"/>

        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Cursor" Value="Hand"/>
            </Trigger>
        </Style.Triggers>
    </Style>


    <Style x:Key="ReplyOneButton" TargetType="{x:Type Button}" BasedOn="{StaticResource BoxButton}">

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Border x:Name="bt_border" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" BorderThickness="0.5" CornerRadius="3" Padding="5,0" VerticalAlignment="Center" HorizontalAlignment="Center" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}">
                        <TextBlock x:Name="textBlock" Text="{Binding Path=Content, RelativeSource={RelativeSource TemplatedParent}}" FontSize="{Binding RepBtnFS}" Foreground="{Binding RepBtnFC}" FontWeight="{Binding RepBtnFW}" VerticalAlignment="Center" HorizontalAlignment="Center"  TextAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{Binding RepOBtnHC}" TargetName="bt_border"/>
                            <Setter Property="BorderBrush" Value="{Binding RepOBtnHC}" TargetName="bt_border"/>
                            <Setter Property="Foreground" Value="{Binding RepOBtnTC}" TargetName="textBlock"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Background" Value="{Binding RepOBtnHC}" TargetName="bt_border"/>
                            <Setter Property="BorderBrush" Value="{Binding RepOBtnHC}" TargetName="bt_border"/>
                            <Setter Property="Foreground" Value="{Binding RepOBtnTC}" TargetName="textBlock"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Cursor" Value="Hand"/>
            </Trigger>
        </Style.Triggers>
    </Style>


    <Style x:Key="ReplyTwoButton" TargetType="{x:Type Button}" BasedOn="{StaticResource BoxButton}">

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Border x:Name="bt_border" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" BorderThickness="0.5" CornerRadius="3" Padding="5,0" VerticalAlignment="Center" HorizontalAlignment="Center" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}">
                        <TextBlock x:Name="textBlock" Text="{Binding Path=Content, RelativeSource={RelativeSource TemplatedParent}}" FontSize="{Binding RepBtnFS}" Foreground="{Binding RepBtnFC}" FontWeight="{Binding RepBtnFW}" VerticalAlignment="Center" HorizontalAlignment="Center"  TextAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{Binding RepTBtnHC}" TargetName="bt_border"/>
                            <Setter Property="BorderBrush" Value="{Binding RepTBtnHC}" TargetName="bt_border"/>
                            <Setter Property="Foreground" Value="{Binding RepTBtnTC}" TargetName="textBlock"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Background" Value="{Binding RepTBtnHC}" TargetName="bt_border"/>
                            <Setter Property="BorderBrush" Value="{Binding RepTBtnHC}" TargetName="bt_border"/>
                            <Setter Property="Foreground" Value="{Binding RepTBtnTC}" TargetName="textBlock"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Cursor" Value="Hand"/>
            </Trigger>
        </Style.Triggers>
    </Style>



    <Style x:Key="ConfirmedDialog" TargetType="ContentControl">

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Grid Width="{Binding SizeW}" Height="{Binding SizeH}" >
                        <Border Style="{StaticResource DefaultPopupBackground}">
                            <Grid>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="{Binding RowOne}"/>
                                    <RowDefinition Height="{Binding RowTwo}"/>
                                    <RowDefinition Height="{Binding RowThree}"/>
                                </Grid.RowDefinitions>


                                <StackPanel Grid.ColumnSpan="4" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <Image Source="{Binding ImSource}" RenderOptions.BitmapScalingMode="HighQuality" Width="{Binding ImW}" Height="{Binding ImH}"/>
                                </StackPanel>


                                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" VerticalAlignment="Top" HorizontalAlignment="Center">

                                    <TextBlock Text="{Binding Title}" TextWrapping="Wrap" Foreground="{Binding TitleFC}" FontSize="{Binding TitleFS}" FontWeight="{Binding TitleFW}" Margin="0,5" VerticalAlignment="Center" HorizontalAlignment="Center"/>


                                    <TextBlock Text="{Binding Message}" TextWrapping="Wrap" Foreground="{Binding MesFC}" FontSize="{Binding MesFS}" FontWeight="{Binding MesFW}" />

                                </StackPanel>


                                <Button Style="{StaticResource ReplyOneButton}" Content="{Binding ReplyOneText}" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="3" Command="{Binding ReplyCommand}" CommandParameter="{Binding ReplyOneValue}"/>

                                <Button Style="{StaticResource ReplyTwoButton}" Content="{Binding ReplyTwoText}" Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="3" Command="{Binding ReplyCommand}" CommandParameter="{Binding ReplyTwoValue}"/>

                            </Grid>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>