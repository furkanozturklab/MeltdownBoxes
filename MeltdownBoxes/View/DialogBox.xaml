<UserControl x:Class="MeltdownBoxes.View.DialogBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MeltdownBoxes.View"
             xmlns:converters="clr-namespace:MeltdownBoxes.ViewModels.Converters"
             mc:Ignorable="d" Uid="{Binding DialogUID}"
             >


    <UserControl.Resources>

        <ResourceDictionary>
           
            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary Source="pack://application:,,,/MeltdownBoxes;component/Resources/DialogStyle.xaml" />

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

        
    </UserControl.Resources>



    <ContentControl Style="{StaticResource ConfirmedDialog}"/>

</UserControl>
